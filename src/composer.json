{
    "autoload": {
        "psr-4": {
            "App\\": "App/"
        }
    },
    "require": {
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix --allow-risky=yes App public",
        "cs-check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes App public",
        "stan": "phpstan analyse App public"
    },
    "config": {
        "allow-plugins": {
            "friendsofphp/php-cs-fixer": true
        }
    }
}
